[project]
name = "wordle-assistant"
version = "0.1.0"
description = "Invite-only Wordle deduction assistant (dark-only UI)."
requires-python = ">=3.12"
dependencies = [
  "fastapi>=0.115",
  "uvicorn[standard]>=0.30",
  "jinja2>=3.1",
  "python-multipart>=0.0.9",
  "argon2-cffi>=23.1.0",
  "itsdangerous>=2.2",
  "httpx>=0.27",
]

[tool.uv]
dev-dependencies = [
  "ruff>=0.6",
]

[tool.ruff]
line-length = 100
target-version = "py312"
